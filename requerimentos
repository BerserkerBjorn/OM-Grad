        });
    if(document.getElementById('necessidade_reintegrado').value == 1){var grad_needed = "[color=red][b]✕[/b] Policial necessita realizar a graduação básica.[/color]"}
    if(document.getElementById('necessidade_reintegrado').value == 2){var grad_needed = "[color=green][b]✓[/b] Policial dispensado de realizar a graduação básica.[/color]"}
    var texto = 
        "[font=Trebuchet MS][b]APROVAÇÃO EM GRADUAÇÃO:[/b]\n" + lista + "\n [b]Graduação aplicada:[/b] " + 
        document.getElementById('grad_aplicada').value + "[/font]"
    document.getElementById('fa-generated-message').value = texto;
}
function fill_license(){
    const meses = ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul","Ago","Set","Out","Nov","Dez"];
    var date = new Date();
        var day1 = date.getDate();
            if(day1<10){day1 = '0' + day1};
        var year1 = date.getFullYear();
        var month1 = meses[date.getMonth()];
    date.setDate(date.getDate() + parseInt(document.getElementById('dias_lic').value));
        var day2 = date.getDate();
            if(day2<10){day2 = '0' + day2};
        var year2 = date.getFullYear();
        var month2 = meses[date.getMonth()];
    var texto = 
        "[font=Trebuchet MS][b]LICENÇA DE SERVIÇO:[/b]\n" + "\n" + 
        "[b]Nickname:[/b] " + document.getElementById('nickname_lic').value + "\n" +
        "[b]Período de licença:[/b] " + day1 + ' ' + month1 + ' ' + year1 + ' até ' + day2 + ' ' + month2 + ' ' + year2 + "\n" +
        "[b]Permissão:[/b] " + document.getElementById('permissao_lic').value + "[/font]";             
    document.getElementById('fa-generated-message').value = texto;
}
