<script>
$(document).ready(function(){
    $('#select_options').on('change',function(){
        $(".card").hide();
        $("#" + $(this).val()).show();
    }).change();
})
function fill_entradas(){
    var date = new Date();
        var day = date.getDate();
            if(day<10){day = '0' + day};
        var year = date.getFullYear();
        const meses = ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul","Ago","Set","Out","Nov","Dez"];
        var month = meses[date.getMonth()];
    var entradas = document.getElementById('novos_membros').value.split(' / ');
    var lista = '';
        entradas.forEach(function(nickname){
            lista = lista + "\n • [b]" + nickname + '[/b] - ' + day + ' ' + month + ' ' + year
        });
    if(document.getElementById('necessidade_novos').value == 1){var necessidade = "[color=red][b]✕[/b] Policiais precisam ser adicionados no subfórum.[/color]"}
    if(document.getElementById('necessidade_novos').value == 2){var necessidade = "[color=red][b]✕[/b] Policiais precisam ser adicionados no emblema.[/color]"}
    if(document.getElementById('necessidade_novos').value == 3){var necessidade = "[color=red][b]✕[/b] Policiais precisam ser adicionados no subfórum e no emblema.[/color]"}
    if(document.getElementById('necessidade_novos').value == 4){var necessidade = "[color=green][b]✓[/b] Policiais já adicionados no emblema e subfórum.[/color]"}
    var texto = 
        "[font=Trebuchet MS][b]NOVO MEMBRO:[/b]\n" + lista + "\n\n" + necessidade + "[/font]";
        
    document.getElementById('fa-generated-message').value = texto;
}
function fill_reintegration(){
    if(document.getElementById('necessidade_reintegrado').value == 1){var grad_needed = "[color=red][b]✕[/b] Policial necessita realizar a graduação básica.[/color]"}
    if(document.getElementById('necessidade_reintegrado').value == 2){var grad_needed = "[color=green][b]✓[/b] Policial dispensado de realizar a graduação básica.[/color]"}
    var texto = 
        "[font=Trebuchet MS][b]REINTEGRAÇÃO:[/b] \n" + "\n" + 
        "[b]Nick:[/b] " + document.getElementById('nickname_reintegrado').value + "\n" + 
        "[b]Permissão:[/b] " + document.getElementById('lid_permitida').value + "\n" + "\n" +
        grad_needed + "[/font]";
    document.getElementById('fa-generated-message').value = texto;
}
function fill_graduation(){
