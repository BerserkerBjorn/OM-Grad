function fill_saida_autopostada(){
    var horario = new Date();
    var data_hoje = horario.getDate();
        if(data_hoje<10){data_hoje = '0' + data_hoje};
    const meses = ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul","Ago","Set","Out","Nov","Dez"];
    var mes_hoje = meses[horario.getMonth()];
    var ano_hoje = horario.getFullYear();
    var horario_hoje = horario.getHours();
        if(horario_hoje<10){horario_hoje = '0' + horario_hoje};
    var minutos_hoje = horario.getMinutes();
        if(minutos_hoje<10){minutos_hoje = '0' + minutos_hoje};
    var segundos_hoje = horario.getSeconds();
        if(segundos_hoje<10){segundos_hoje = '0' + segundos_hoje};
    document.getElementById('horario_envio_honr').value = data_hoje + ' ' + mes_hoje + ' ' + ano_hoje + ' ' + horario_hoje + ':' + minutos_hoje + ':' + segundos_hoje;

    var texto = 
        "[font=Trebuchet MS][b]SAÍDA DA SUBCOMPANHIA:[/b] \n \n" +                 
        "[b]Nickname:[/b] " + document.getElementById('nickname_saída_autopostada').value + "\n" + 
        "[b]Permissão:[/b] " + document.getElementById('permissão_saída_autopostada').value + "\n" + "\n" +
        "[color=green][b]✓[/b] Afirmo ter conferido se estou há menos de 7 dias e mais de 30 dias na subcompanhia. Caso não esteja, estou ciente do recebimento de 100 medalhas efetivas negativas como punição por saída precoce.[/color][/font]"
    document.getElementById('fa-generated-message').value = texto;
}
function fill_saida(){
    var horario = new Date();
    var data_hoje = horario.getDate();
        if(data_hoje<10){data_hoje = '0' + data_hoje};
    const meses = ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul","Ago","Set","Out","Nov","Dez"];
    var mes_hoje = meses[horario.getMonth()];
    var ano_hoje = horario.getFullYear();
    var horario_hoje = horario.getHours();
        if(horario_hoje<10){horario_hoje = '0' + horario_hoje};
    var minutos_hoje = horario.getMinutes();
        if(minutos_hoje<10){minutos_hoje = '0' + minutos_hoje};
    var segundos_hoje = horario.getSeconds();
        if(segundos_hoje<10){segundos_hoje = '0' + segundos_hoje};
    document.getElementById('horario_envio_remoção').value = data_hoje + ' ' + mes_hoje + ' ' + ano_hoje + ' ' + horario_hoje + ':' + minutos_hoje + ':' + segundos_hoje;

    var saidas = document.getElementById('nickname_remoção').value.split(' / ');
    var lista_saidas = '';
        saidas.forEach(function(nickname){
            lista_saidas = lista_saidas + "\n • [b]" + nickname + '[/b] - ' + document.getElementById('motivo_remoção').value
        });
    var texto = 
        "[font=Trebuchet MS][b]REMOÇÃO DA LISTAGEM:[/b] \n" + lista_saidas + "[/font]"                 
    document.getElementById('fa-generated-message').value = texto;
}
function fill_expulsoes(){
    var horario = new Date();
    var data_hoje = horario.getDate();
        if(data_hoje<10){data_hoje = '0' + data_hoje};
    const meses = ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul","Ago","Set","Out","Nov","Dez"];
    var mes_hoje = meses[horario.getMonth()];
    var ano_hoje = horario.getFullYear();
    var horario_hoje = horario.getHours();
        if(horario_hoje<10){horario_hoje = '0' + horario_hoje};
    var minutos_hoje = horario.getMinutes();
        if(minutos_hoje<10){minutos_hoje = '0' + minutos_hoje};
    var segundos_hoje = horario.getSeconds();
        if(segundos_hoje<10){segundos_hoje = '0' + segundos_hoje};
    document.getElementById('horario_envio_exp').value = data_hoje + ' ' + mes_hoje + ' ' + ano_hoje + ' ' + horario_hoje + ':' + minutos_hoje + ':' + segundos_hoje;

    var expulsos = document.getElementById('nickname_expulso').value.split(' / ');
    var lista_expulsos = '';
        expulsos.forEach(function(nickname){
            lista_expulsos = lista_expulsos + "\n • [b]" + nickname + '[/b] - ' + document.getElementById('motivo_expulso').value
        });
        if(document.getElementById('motivo_expulso').value == 'Inatividade'){var adicional = "\n \n [b]Prints Comprovantes:[/b] [url=" + document.getElementById('comprovante_expulso').value + "]Prints[/url][/font]"}else{var adicional = "[/font]"}
    var texto = 
        "[font=Trebuchet MS][b]EXPULSÃO DA SUBCOMPANHIA:[/b] \n" + lista_expulsos + adicional                                 
    document.getElementById('fa-generated-message').value = texto;
}
