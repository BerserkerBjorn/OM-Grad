<script src="https://forumeiros.github.io/assets/src/form-generator/form-replace.js" type="text/javascript"></script>

<script type="text/javascript">  // POSTAGEM NO FÓRUM
(function ($) {
    'use strict';
    $(window).on('load', function () {
        $('form').on('submit', function (event) {
        event.preventDefault();
        $(this).find('button[type="submit"]').text('Postando...');
        setTimeout(function () {
            $.post('/post', {
                t: 33648,
                    message: $('#fa-generated-message').val().trim(),
                    mode: 'reply',
                    tid: $('[name="tid"]:first').val(),
                    post: 1,
            }).done(function () {
                    alert('Postado com sucesso. Você será redirecionado para o tópico...');
            location.href = 'http://' + location.host + '/t33648-?view=newest';
                }).fail(function () {
                    alert('Houve um erro! Tente novamente!');
                });
        }, 600);
        });
    });
}(jQuery));
</script>

<script> // ENVIA RESPOSTAS PARA A PLANILHA
var url_macro = 'https://script.google.com/macros/s/AKfycbw-LRm5Nk_jk-kjN9qzDWhC4uzXaV9xpvXBy2shMfIk9drHLLTc1X9sBpgqRR5qw5k4qA/exec';
var form_saida_honrosa = document.getElementById("saidas_honrosas_autopostagem");
var form_remover = document.getElementById("remoção_listagem");
var form_expulsar = document.getElementById("form_expulsões");

form_saida_honrosa.addEventListener('submit', e => {
    e.preventDefault()
    fetch(url_macro, { method: 'POST', body: new FormData(form_saida_honrosa)})
        .then(response => alert('Resposta enviada para a planilha!'))
        .catch(error => alert('Resposta não enviada para a planilha. Contate um membro do ministério!'))
})

form_remover.addEventListener('submit', e => {
    e.preventDefault()
    fetch(url_macro, { method: 'POST', body: new FormData(form_remover)})
        .then(response => alert('Resposta enviada para a planilha!'))
        .catch(error => alert('Resposta não enviada para a planilha. Contate um membro do ministério!'))
})

form_expulsar.addEventListener('submit', e => {
    e.preventDefault()
    fetch(url_macro, { method: 'POST', body: new FormData(form_expulsar)})
        .then(response => alert('Resposta enviada para a planilha!'))
        .catch(error => alert('Resposta não enviada para a planilha. Contate um membro do ministério!'))
})
</script>
<script> // SCRIPTS NAVBAR
/* ======= DESOCULTAR NAVBAR ===========*/
const showMenu = (headerToggle, navbarId) =>{
    const toggleBtn = document.getElementById(headerToggle),
    nav = document.getElementById(navbarId),
    content = document.getElementById("text_content"),
    bd = document.getElementById("body"),
    dropdown = document.querySelectorAll('.nav_dropwdown');
    
    // Validate that variables exist
    if(headerToggle && navbarId){
        document.addEventListener('click', ()=>{
            var buttonIsClicked = toggleBtn.contains(event.target);
            var sideBarIsClicked = nav.contains(event.target);
            
            if(buttonIsClicked){
                nav.classList.toggle('show-menu')
                content.classList.toggle('active')
                bd.classList.toggle('active_bd')
                toggleBtn.classList.toggle('bx-x')
            }
            else if(!sideBarIsClicked && $("#text_content").css("opacity") == 0.3){
                nav.classList.toggle('show-menu')
                content.classList.toggle('active')
                bd.classList.toggle('active_bd')
                toggleBtn.classList.toggle('bx-x')
            }
        })
        dropdown.forEach(function(element){
            element.addEventListener('click', () =>{
                element.classList.toggle('show_dropdown')
            })
        });
    }
}
showMenu('header-toggle','navbar')
</script>
</body>
</html>
